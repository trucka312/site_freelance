<section class="section">
  <div class="container">
 <p class="title">My Offers</p>
 <table class="table is-fullwidth">
  <thead>
    <tr>

      <th>Date</th>
      <th>Request Title</th>
      <th>Budget</th>
      <th>Offer Amount</th>
      <th>Deliver in</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% if @offers.blank? %>
    <tr>
      <td colspan="6" class="has-text-centered"><h1>Nothing to Show Here</h1></td>
    </tr>
    <% end %>
    <% @offers.each do |o| %>
    <tr>

      <td><%= o.created_at.strftime(' %d, %b %Y' ) %></td>
       <td>
        <%= link_to o.request.title, request_path(o.request) %>
       </td>
        <td>$<%= o.request.budget %></td>
       <td>$<%= o.amount %></td>
        <td><%= pluralize(o.days, 'day') %></td>
         <td><%= o.status.capitalize %></td>
          <td>
           <span class="tag <%=  'is-warning' if o.pending? %>
            <%=  'is-success' if o.pending? %>
            <%=  'is-danger' if o.pending? %>">
            <%= o.status.capitalize %>
          </span>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</section>







